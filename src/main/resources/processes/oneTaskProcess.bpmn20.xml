<?xml version="1.0" encoding="UTF-8"?>
<definitions
        xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
        xmlns:flowable="http://flowable.org/bpmn"
        targetNamespace="Examples">

    <process id="oneTaskProcess" name="Famous One Task Process">

        <startEvent id="theStart" flowable:initiator="initiator"/>

        <sequenceFlow sourceRef="theStart" targetRef="theTask"/>

        <userTask id="theTask" name="my task" flowable:assignee="${initiator}"/>

        <sequenceFlow sourceRef="theTask" targetRef="emailTask"/>

        <serviceTask id="emailTask"
                     flowable:expression="#{emailService.sendWelcomeEmail(customerId, email)}"/>

        <sequenceFlow sourceRef="emailTask" targetRef="theEnd"/>

        <endEvent id="theEnd"/>

    </process>

</definitions>
